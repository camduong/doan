
div.row
	div.col-sm-6.col-md-4.col-md-offset-4.col-sm-offset-3
		h1 Checkout
		h4 Your Total:
			span=number_format($total)
			 |  VNĐ
		form#checkout-form(action=route('checkout'), method="post")
			div#charge-error.alert.alert-danger=(!Session::has('error') ? 'hidden' : '')
				div=(Session::get ('error'))

				div.row
					div.col-xs-12
						div.form-group
							label(for="name") Name
							input#name.form-control(type="text", required, name="name", value=(Auth::user()->name))

					div.col-xs-12
						div.form-group
							label(for="address") Address
							input#address.form-control(type="text",required, name="address",value=(Auth::user()->email)))
				div!=csrf_field()
				button.btn.btn-success(type="submit") Buy now
