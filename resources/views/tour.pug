extends layouts/app-wels
block content
  main.cd-main-content.main-user.main-tour
    .intro

    .container
      .row
        .col-md-4
          .input-group
            input.form-control(type='text', placeholder='Search for...')
            span.input-group-btn
              button.btn.btn-secondary(type='button') Go!
        .col-md-4
          .input-group
            input.form-control(type='text', placeholder='Search for...')
            span.input-group-btn
              button.btn.btn-secondary(type='button') Go!
        .col-md-4
          .datepicker.input-daterange.input-group
            input.form-control(type='text', name='start')
            span.input-group-addon to
            input.form-control(type='text', name='end')

      .row.justify-content-md-center#tour-overflow
        .grid
          .grid-sizer
          datas = $tours
          each data, i in datas
            .grid-item
              img(src='../img/', alt='Card image cap')
              .grid-intro.col-md-12
                a(href='#')
                  h3=data->name
                .col-md-5.col-xs-12
                  i.fa.fa-clock-o(aria-hidden='true')
                  h5=data->day
                  br
                  i.fa.fa-calendar(aria-hidden='true')
                  h5=data->depart_date
                .col-md-7.col-xs-12
                  h3=data->price
                    sup VND
                  .action
                    i.fa.fa-cart-plus(aria-hidden='true')




      button.btn.btn-secondary.btn-lg.btn-overflow(type='button') Xem thÃªm
    nav.page(aria-label='Page navigation example')
      ul.pagination.justify-content-center
        li.page-item
          a.page-link(href='#', aria-label='Previous')
            span(aria-hidden='true') &laquo;
            span.sr-only Previous
        li.page-item
          a.page-link(href='#') 1
        li.page-item
          a.page-link(href='#') 2
        li.page-item
          a.page-link(href='#') 3
        li.page-item
          a.page-link(href='#', aria-label='Next')
            span(aria-hidden='true') &raquo;
            span.sr-only Next
